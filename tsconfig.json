{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "target": "es2018",
        "outDir": "build",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "checkJs": true
    },
    "include": [
        "lib/**/*",
    ]
}
